---
import Logo from './Logo.astro';
---

<style>
  footer {
    display: flex;
    flex-direction: column;
    align-items: center;

    padding: 15px 15px 38px 15px;

    background: var(--Light-Cream-2, #f0e9dd);
  }

  footer > div:first-child {
    display: flex;
    min-width: 100%;
    flex-direction: column;
    align-items: center;

    padding: 38px 0;

    border-radius: 16px;
    background: var(--White, #fff);
  }

  footer > div:first-child h2 {
    max-width: 220px;
    margin: 0 0 22px 0;

    color: var(--Night-Green-2, #213528);
    text-align: center;
    font-family: Aeonik;
    font-size: 32px;
    font-style: normal;
    font-weight: 400;
  }

  footer > div:first-child p {
    max-width: 220px;
    margin: 0 0 22px 0;

    color: var(--Night-Green-2, #213528);
    text-align: center;
    font-family: Aeonik;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;

    opacity: 0.6;
  }

  footer > div:first-child a {
    display: inline-flex;
    padding: 10px 20px 12px 20px;
    align-items: flex-start;
    gap: 10px;

    border-radius: 8px;
    background: var(--Forest-Green-2, #275130);

    text-decoration: none;
    color: var(--White, #fff);
    font-family: Aeonik;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
  }

  .Logo {
    width: 100%;
    max-width: 125px;

    margin: 33px 0;
  }

  .Columns {
    min-width: 100%;
    display: flex;
    justify-content: space-around;
    margin-bottom: 36px;
  }

  .Columns div {
    display: flex;
    flex-direction: column;
    width: 100px;
  }

  .Columns div p {
    margin: 0 0 22px 0;

    color: var(--Forest-Green-2, #275130);
    font-family: Aeonik;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;

    opacity: 0.5;
  }

  .Columns div a {
    margin: 0 0 11px 0;

    color: var(--Night-Green-2, #213528);
    font-family: Aeonik;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    text-decoration: none;
  }

  .Copyright {
    min-width: 100%;
    display: flex;
    justify-content: space-between;
  }

  .Copyright div {
    display: flex;
    flex-direction: column;
  }

  .Copyright a {
    margin: 0;

    color: var(--Forest-Green-2, #275130);
    font-family: Aeonik;
    font-size: 12px;
    font-style: normal;
    font-weight: 400;
    text-decoration: none;
  }

  .Copyright p {
    margin: 0;

    color: var(--Forest-Green-2, #275130);
    text-align: right;
    font-family: Aeonik;
    font-size: 12px;
    font-style: normal;
    font-weight: 400;

    opacity: 0.5;
  }
</style>

